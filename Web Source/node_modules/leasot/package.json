{
  "name": "leasot",
  "description": "Parse and output TODOs and FIXMEs from comments in your files",
  "version": "7.5.0",
  "author": "Gilad Peleg <gilad@giladpeleg.com> (https://www.giladpeleg.com)",
  "bin": {
    "leasot": "./bin/leasot",
    "leasot-reporter": "./bin/leasot-reporter"
  },
  "dependencies": {
    "async": "^3.0.1",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "eol": "^0.9.1",
    "get-stdin": "^7.0.0",
    "globby": "^9.2.0",
    "json2xml": "^0.1.3",
    "lodash": "^4.17.11",
    "log-symbols": "^3.0.0",
    "strip-ansi": "^5.2.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@types/async": "^3.0.0",
    "@types/get-stdin": "^7.0.0",
    "@types/globby": "^9.1.0",
    "@types/log-symbols": "^3.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "@types/strip-ansi": "^5.2.1",
    "@types/text-table": "^0.2.1",
    "gh-pages": "^2.0.1",
    "husky": "^2.4.1",
    "jsdoc-to-markdown": "^5.0.0",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "should": "^13.2.3",
    "ts-node": "^8.3.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "engines": {
    "node": ">=6.14.4"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "fixme",
    "todo",
    "comments",
    "list",
    "parse",
    "generator",
    "ci",
    "productivity",
    "automation",
    "typescript",
    "prettier"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "pgilad/leasot",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf docs dist",
    "docs": "typedoc --name leasot --readme none --out docs --target es6 --mode file --excludeNotExported --excludePrivate src",
    "docs:publish": "gh-pages -m '[ci skip] Updates' -d docs",
    "predocs:publish": "npm run release:prepare",
    "prepublishOnly": "npm run release:prepare",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/*.ts'",
    "prettier-check": "prettier --list-different 'src/**/*.ts' 'tests/*.ts'",
    "release:prepare": "npm run clean && npm run prettier && npm run build && npm run test && npm run docs",
    "test": "mocha --require ts-node/register -R spec './tests/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.yml": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
